@model clothing_store.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div id="product-section">
    @await Html.PartialAsync("_ProductListPartial", Model.Products)
</div>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a href="@Url.Action("Products", new { pageNumber = Model.CurrentPage - 1, pageSize = Model.PageSize })">Previous</a>
    }

    <span>Page @Model.CurrentPage of @Model.TotalPages</span>

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="@Url.Action("Products", new { pageNumber = Model.CurrentPage + 1, pageSize = Model.PageSize })">Next</a>
    }
</div>
