@model SpecialDiscount

@{
    ViewData["Title"] = "Create Special Discount";
}

<h2>Create Special Discount</h2>

<form asp-action="CreateSpecialDiscountPost" method="post">
    <input type="hidden" asp-for="AccountId" value="@ViewBag.AccountId" />

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountAmount"></label>
        <input asp-for="DiscountAmount" class="form-control" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="Percentage">Percentage</option>
            <option value="FixedAmount">Fixed Amount</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
