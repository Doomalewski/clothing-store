@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            

            @if (TempData["LoginError"] != null)
            {
                <div class="alert alert-danger text-center text-black">
                    @TempData["LoginError"]
                </div>
            }
            
            <form asp-action="Login" method="post" class="p-5 rounded shadow-lg" style="background-color: #000; color: #fff;">

                <div class="text-center">
                    <!-- Image Field -->
                    <img src="/Images/login logo.png" alt="Logo" style="width: 100px; height: auto; margin-bottom: 10px; border-radius: 50%; background-color: white">

                    <!-- Text -->
                    <h1 class="text-white" style="font-weight: bold;">Welcome Back!</h1>
                </div>
                
                <h4 class="text-white mb-3">Login</h4>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label" style="font-weight: bold;">Email</label>
                    <input asp-for="Email" class="form-control bg-dark text-white" placeholder="Enter your email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label" style="font-weight: bold;">Password</label>
                    <input asp-for="Password" class="form-control bg-dark text-white" type="password" placeholder="Enter your password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-success w-100 mb-3">Login</button>
                </div>

                <p class="text-end ">
                    <a asp-action="ForgotPassword" class="text-decoration-none text-white text-end">
                        Forgot password?
                    </a>
                </p>
                <div class="d-flex align-items-center">
                    <!-- Toggle Switch -->
                    <label class="switch">
                        <input type="checkbox">
                        <span class="slider"></span>
                    </label>
                    <!-- Label -->
                    <span class="ms-2">Remember me</span>
                </div>

                <div class="text-center">
                    <div class="text-center my-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1" style="border-bottom: 1px solid #ccc;"></div>
                            <span class="mx-2" style="color: #ccc; font-weight: bold;">Or Login With</span>
                            <div class="flex-grow-1" style="border-bottom: 1px solid #ccc;"></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-light flex-grow-1 me-2 d-flex align-items-center justify-content-center" style="background-color: #fff; color: #000;">
                            <img src="/Images/googlelogo.webp" alt="Google" style="width: 20px; height: 20px; margin-right: 8px;">
                            Google
                        </button>
                        <button type="button" class="btn btn-outline-light flex-grow-1 d-flex align-items-center justify-content-center" style="background-color: #fff; color: #000;">
                            <img src="/Images/applelogo.png" alt="Apple" style="width: 20px; height: 20px; margin-right: 8px;">
                            Apple
                        </button>
                    </div>
                </div>

                <div class="text-center my-3">
                    <div class="flex-grow-1" style="border-bottom: 1px solid #ccc;"></div>
                </div>
                <p class="text-center mt-3 text-white">
                    Don't have an account yet?
                    <a asp-controller="Account" asp-action="Register" class="text-decoration-none text-white">
                        <strong>Register here!</strong>
                    </a>
                </p>
            </form>
            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
