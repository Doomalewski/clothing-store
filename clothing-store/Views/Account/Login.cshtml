@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center text-black mb-4" style="font-weight: bold;">Login</h1>

            @if (TempData["LoginError"] != null)
            {
                <div class="alert alert-danger text-center text-black">
                    @TempData["LoginError"]
                </div>
            }

            <form asp-action="Login" method="post" class="p-4 rounded shadow-lg" style="background-color: #000; color: #fff;">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label" style="font-weight: bold;">Email</label>
                    <input asp-for="Email" class="form-control bg-dark text-white" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label" style="font-weight: bold;">Password</label>
                    <input asp-for="Password" class="form-control bg-dark text-white" type="password" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-success w-100 mb-3">Login</button>
                </div>
                <div class="text-center">
                    <p style="color: #fff; margin-bottom: 1rem;">or</p>
                    <button type="button" class="btn btn-outline-light w-100 mb-2" style="background-color: #fff; color: #000;">
                        <i class="fab fa-google"></i> Login with Google
                    </button>
                    <button type="button" class="btn btn-outline-light w-100" style="background-color: #fff; color: #000;">
                        <i class="fab fa-apple"></i> Login with Apple
                    </button>
                </div>
            </form>

            <p class="text-center mt-3">
                <a asp-action="ForgotPassword" class="text-decoration-none text-black">
                    Forgot your password?
                </a>
            </p>

            <p class="text-center mt-3 text-black">
                Don't have an account yet? <a asp-controller="Account" asp-action="Register" class="text-decoration-none text-black">
                    <strong>Register here!</strong>
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
