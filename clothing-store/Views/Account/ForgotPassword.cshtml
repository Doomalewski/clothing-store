@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center text-black mb-4" style="font-weight: bold;">Forgot Password</h1>

            <p class="text-center text-black">
                Enter your email address, and we will send you instructions to reset your password.
            </p>

            <form asp-action="ForgotPassword" method="post" class="p-4 rounded shadow-lg" style="background-color: #000; color: #fff;">
                <div class="mb-3">
                    <label for="email" class="form-label" style="font-weight: bold;">Email</label>
                    <input type="email" id="email" name="email" class="form-control bg-dark text-white" placeholder="Enter your email" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-success w-100">Send Reset Link</button>
                </div>
            </form>

            <p class="text-center mt-3 text-black">
                <a asp-action="Login" class="text-decoration-none text-black">
                    Back to Login
                </a>
            </p>
        </div>
    </div>
</div>
