@using clothing_store.ViewModels
@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Account Details";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- Settings Section -->
        <!-- Static Sidebar Section -->
        <div class="col-md-3">
            <div class="settings-section bg-white text-black">
                <div class="p-3">
                    <h4 class="text-center mb-4">Account</h4>
                    <ul class="list-unstyled text-start">
                    
                        <li class="mb-3"><a asp-controller="Account" asp-action="Details" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Details") ? "fw-bold" : "")">Details</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Preferences" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Preferences") ? "fw-bold" : "")">Preferences</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Newsletter" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Newsletter") ? "fw-bold" : "")">Newsletter</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Orders" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Orders") ? "fw-bold" : "")">Orders</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-md-9">
            <h1 class="text-center text-black mb-4" style="font-weight: bold;">Account Details</h1>

            <div class="p-4 rounded" style="background-color: #000; color: #fff;">
                <!-- Profile Section -->
                <div class="text-center mb-4">
                    <h2 class="text-white" style="font-size: 1.5rem;">@Model.Account.Username</h2>
                    <p class="text-muted" style="font-size: 1rem;">@Model.Account.Email</p>
                </div>

                <!-- Details Section -->
                <div class="mb-4">
                    <h3 class="text-white" style="font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">Personal Information</h3>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" class="form-control bg-dark text-white" value="@Model.Account.Name" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" class="form-control bg-dark text-white" value="@Model.Account.Surname" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Age</label>
                            <input type="text" class="form-control bg-dark text-white" value="@Model.Account.Age" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Gender</label>
                            <input type="text" class="form-control bg-dark text-white" value="@(Model.Account.Sex ? "Male" : "Female")" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Height</label>
                            <input type="text" class="form-control bg-dark text-white" value="@Model.Account.Height cm" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Weight</label>
                            <input type="text" class="form-control bg-dark text-white" value="@Model.Account.Weight kg" readonly>
                        </div>
                    </div>
                </div>

                

                <!-- Address Section -->
                <div class="mb-4">
                    <h3 class="text-white" style="font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">Address</h3>
                    <textarea class="form-control bg-dark text-white" rows="2" readonly>
                        @(Model.Account.Address != null ? $"{Model.Account.Address.Street}, {Model.Account.Address.City}" : "No assigned address")
                    </textarea>
                </div>

                
            </div>
        </div>
    </div>
</div>
