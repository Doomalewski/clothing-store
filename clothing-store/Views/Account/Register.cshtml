@model clothing_store.Models.AccountDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-black text-center mb-4" style="font-weight: bold;">Register</h2>
            <form asp-action="Register" method="post" class="p-4 rounded shadow-lg" style="background-color: #000; color: #fff;">
                
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label text-white">Username</label>
                    <input asp-for="Username" class="form-control bg-dark text-white" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-white">Email</label>
                    <input asp-for="Email" class="form-control bg-dark text-white" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label text-white">Password</label>
                    <input asp-for="Password" class="form-control bg-dark text-white" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label text-white">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-white" type="password" placeholder="Confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-success w-100">Register</button>
                </div>
            </form>

            <p class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-black">
                    Already have an account? <strong>Login here!</strong>
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
