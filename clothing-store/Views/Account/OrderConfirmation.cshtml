@model clothing_store.ViewModels.OrderConfirmationViewModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="contact-form-container">
    <h2>Order Confirmation</h2>
    <p>Thank you for your purchase!</p>

    <!-- Basic Order Details -->
    <div class="form-group">
        <label>Order ID:</label>
        <span>@Model.OrderId</span>
    </div>
    <div class="form-group">
        <label>Date:</label>
        <span>@Model.Date.ToString("MMMM dd, yyyy HH:mm")</span>
    </div>
    <div class="form-group">
        <label>Status:</label>
        <span>@Model.OrderStatus</span>
    </div>

    <!-- Address -->
    <div class="form-group">
        <label>Shipping Address:</label>
        <p>@Model.Street, @Model.City, @Model.State, @Model.ZipCode, @Model.Country</p>
    </div>

    <!-- Shipping & Payment -->
    <div class="form-group">
        <label>Shipping Method:</label>
        <span>@Model.ShippingMethodName</span>
    </div>
    <div class="form-group">
        <label>Payment Method:</label>
        <span>@Model.PaymentMethodName</span>
    </div>
    <div class="form-group">
        <label>Total Price:</label>
        <span>@Model.FullPrice.ToString("C")</span>
    </div>

    <hr />

    <!-- Button to go home or to orders page -->
    <button class="btn btn-black text-white" onclick="location.href='/'">Return to Home</button>
</div>
