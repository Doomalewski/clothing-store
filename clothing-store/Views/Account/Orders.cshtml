@using clothing_store.ViewModels
@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Orders";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container-fluid p-0">
    <div class="row g-0">
        <div class="col-md-3">
            <div class="settings-section bg-white text-black">
                <div class="p-3">
                    <h4 class="text-center mb-4">Account</h4>
                    <ul class="list-unstyled text-start">

                        <li class="mb-3"><a asp-controller="Account" asp-action="Details" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Details") ? "fw-bold" : "")">Details</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Preferences" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Preferences") ? "fw-bold" : "")">Preferences</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Newsletter" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Newsletter") ? "fw-bold" : "")">Newsletter</a></li>
                        <li class="mb-3"><a asp-controller="Account" asp-action="Orders" class="text-black d-block @((ViewContext.RouteData.Values["Action"].ToString() == "Orders") ? "fw-bold" : "")">Orders</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Orders Content Section -->
        <div class="col-md-9">
            <h1 class="text-center text-black mb-4" style="font-weight: bold;">Orders</h1>

            <div class="p-4 rounded" style="background-color: #000; color: #fff;">
                <h3 class="text-white" style="font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">Your Orders</h3>

                <div class="mb-4">
                    <h3 class="text-white" style="font-size: 1.25rem; font-weight: bold; margin-bottom: 1rem;">Orders</h3>
                    <div id="ordersList" class="text-white">
                        @await Html.PartialAsync("_OrdersListPartial", Model.Orders)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
