@model clothing_store.ViewModels.ProductEditViewModel

<div class="container mt-5">
    <h2>Edit Product</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BrandId">Brand</label>
            <select asp-for="BrandId" class="form-control" asp-items="@(new SelectList(Model.Brands, "BrandId", "Name"))"></select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiscountPrice"></label>
            <input asp-for="DiscountPrice" class="form-control" />
            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaxId">Tax</label>
            <select asp-for="TaxId" class="form-control" asp-items="@(new SelectList(Model.Taxes, "TaxId", "Value"))"></select>
            <span asp-validation-for="TaxId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="Visible" class="form-check-input" />
            <label asp-for="Visible" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="New" class="form-check-input" />
            <label asp-for="New" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="InStock" class="form-check-input" />
            <label asp-for="InStock" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
