@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card for Deleting Product -->
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff; padding-bottom: 20px;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h2 class="mb-0">Delete Product</h2>
                </div>

                <div class="card-body">
                    <h3 class="text-center">Are you sure you want to delete this product?</h3>
                    <hr />

                    <h4>Product</h4>
                    <dl class="row">
                        <dt class="col-sm-2">Product ID</dt>
                        <dd class="col-sm-10">@Model.ProductId</dd>

                        <dt class="col-sm-2">Name</dt>
                        <dd class="col-sm-10">@Model.Name</dd>

                        <dt class="col-sm-2">Price</dt>
                        <dd class="col-sm-10">$@Model.Price</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" id="Id" name="Id" value="@Model.ProductId" />
                        <button type="submit" class="btn btn-danger w-100 my-2">Delete</button>
                        <a asp-action="Index" class="btn bg-white text-black w-100">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
