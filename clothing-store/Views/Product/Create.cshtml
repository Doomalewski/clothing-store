@model clothing_store.Models.ProductCreateDto

<h2>Dodaj nowy produkt</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="Name">Nazwa produktu:</label>
        <input type="text" id="Name" name="Name" required />
    </div>

    <div>
        <label for="Description">Opis produktu:</label>
        <textarea id="Description" name="Description" required></textarea>
    </div>

    <div>
        <label for="Price">Cena:</label>
        <input type="number" id="Price" name="Price" step="0.01" required />
    </div>

    <div>
        <label for="Quantity">Iloœæ:</label>
        <input type="number" id="Quantity" name="Quantity" required />
    </div>

    <div>
        <label for="BrandId">Marka:</label>
        <select id="BrandId" name="BrandId" required>
            <option value="">Wybierz markê</option>
            @foreach (var brand in ViewBag.Brands)
            {
                <option value="@brand.BrandId">@brand.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="TaxId">Podatek VAT:</label>
        <select id="TaxId" name="TaxId" required>
            <option value="">Wybierz podatek VAT</option>
            @foreach (var tax in ViewBag.Taxes)
            {
                <option value="@tax.TaxId">@tax.Value %</option>
            }
        </select>
    </div>

    <div>
        <label for="Visible">Widocznoœæ:</label>
        <input type="checkbox" id="Visible" asp-for="Visible" />
    </div>

    <button type="submit" value="Create">Dodaj produkt</button>
</form>
