@model OrderDetailsDto

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <h1 class="text-center text-black mb-5" style="font-weight: bold;">Order Details</h1>

    <div class="p-4 rounded shadow" style="background-color: #f8f9fa; max-width: 800px; margin: 0 auto;">
        <!-- Order Header -->
        <h3 class="text-dark mb-3">Order <span style="color: #6c757d;">#@Model.OrderId</span></h3>
        <ul class="list-unstyled">
            <li><strong>Placed on:</strong> @Model.Date.ToString("yyyy-MM-dd")</li>
            <li><strong>Status:</strong> <span class="badge bg-success">@Model.OrderStatus</span></li>
            <li><strong>Total Price:</strong> @Model.FullPrice.ToString("C")</li>
            <li><strong>Shipping Method:</strong> @Model.ShippingMethod</li>
            <li><strong>Payment Method:</strong> @Model.PaymentMethod</li>
        </ul>

        <!-- Shipping Address -->
        <h4 class="text-dark mt-4">Shipping Address</h4>
        <p class="text-muted">@Model.Address</p>

        <!-- Products in Order -->
        <h4 class="text-dark mt-4">Products in Order</h4>
        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col" class="text-end">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td class="text-center">@product.Quantity</td>
                        <td class="text-end">@product.Price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Back to Account Button -->
        <div class="text-center mt-4">
            <a asp-controller="Account" asp-action="Details" class="btn btn-dark btn-lg">Back to Account</a>
        </div>
    </div>
</div>
