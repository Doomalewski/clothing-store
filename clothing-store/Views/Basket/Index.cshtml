@model clothing_store.Models.Basket

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="container mt-5">
    <div class="row">
        <!-- Continue Shopping Link -->
        <div class="col-12 mb-3">
            <a asp-action="Index" asp-controller="Shop" class="text-decoration-none text-white">
                ‚Üê Continue Shopping
            </a>
        </div>
    </div>

    <!-- Cart Title -->
    <h1 class="text-center text-white mb-4" style="font-weight: bold;">The Shop</h1>

    @if (Model.BasketProducts == null || !Model.BasketProducts.Any())
    {
        <p class="text-center text-white">Your cart is empty.</p>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <!-- Cart Items -->
                @foreach (var item in Model.BasketProducts)
                {
                    <div class="mb-4 p-3 rounded shadow-lg" style="background-color: #000;">
                        <div class="row align-items-center">
                            <img src="~/Images/edzio.jpg" alt="@item.Product.Name" class="img-fluid rounded" style="width:200px; height:200px;" />
                            <div class="col-md-3">
                        
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-5">
                                <h4 class="text-white">@item.Product.Name</h4>
                                <p class="text-muted">@item.Product.Description</p>
                            </div>

                            <!-- Quantity and Actions -->
                            <div class="col-md-2 text-center">
                                <div class="d-flex align-items-center justify-content-center">
                                    <form asp-action="UpdateCart" method="post" class="d-inline">
                                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                                        <button type="submit" name="action" value="decrement" class="btn btn-outline-light btn-sm">-</button>
                                        <span class="mx-2 text-white">@item.Quantity</span>
                                        <button type="submit" name="action" value="increment" class="btn btn-outline-light btn-sm">+</button>
                                    </form>
                                </div>
                                <p class="text-white mt-2">@item.Product.Price.ToString("C")</p>
                            </div>

                            <!-- Remove Item -->
                            <div class="col-md-2 text-center">
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="ProductId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Summary Section -->
            <div class="col-lg-4">
                <div class="p-3 rounded shadow-lg" style="background-color: #000;">
                    <h4 class="text-white">Summary</h4>
                    <p class="text-white">Shipping, taxes, and discounts calculated at checkout.</p>
                    <hr class="text-white" />
                    <div class="d-flex justify-content-between">
                        <span class="text-white">Subtotal:</span>
                        <span class="text-white">@Model.BasketProducts.Sum(item => item.Product.Price * item.Quantity).ToString("C")</span>
                    </div>
                    <hr class="text-white" />
                    <div class="text-center mt-4">
                        <a asp-action="Checkout" class="btn btn-success btn-lg w-100">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
