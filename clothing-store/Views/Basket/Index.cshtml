@model clothing_store.Models.Basket

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h2>Your Shopping Cart</h2>

@if (Model.BasketProducts == null || !Model.BasketProducts.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BasketProducts)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateCart" method="post">
                            <input type="hidden" name="ProductId" value="@item.ProductId" />
                            <input type="number" name="Quantity" value="@item.Quantity" min="1" class="form-control" style="width: 70px;" />
                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                        </form>
                    </td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="ProductId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total</strong></td>
                <td colspan="2">Tutaj cena calkowita</td>
            </tr>
        </tfoot>
    </table>

    <p>
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </p>
}
