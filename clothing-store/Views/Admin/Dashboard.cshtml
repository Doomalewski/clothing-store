@{
    ViewData["Title"] = "Dashboard";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h2 class="text-white mb-4" style="font-weight: bold;">Panel Administratora</h2>
        </div>

        <!-- Zarządzaj produktami -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Zarządzaj Produktami</h5>
                </div>
                <div class="card-body text-center">
                    <p>Przeglądaj listę wszystkich produktów.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-light w-100">Wyświetl</a>
                </div>
            </div>
        </div>

        <!-- Zarządzaj użytkownikami -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Zarządzaj użytkownikami</h5>
                </div>
                <div class="card-body text-center">
                    <p>Przeglądaj, edytuj lub usuwaj użytkowników.</p>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-light w-100">Zarządzaj użytkownikami</a>
                </div>
            </div>
        </div>

        <!-- Aktualizacja kursów walut -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Aktualizuj kursy walut</h5>
                </div>
                <div class="card-body text-center">
                    <p>Aktualizuj kursy walut dla USD, EUR, GBP i JPY.</p>
                    <a asp-controller="Admin" asp-action="UpdateCurrencyRates" class="btn btn-light w-100">Zaktualizuj kursy</a>
                </div>
            </div>
        </div>

        <!-- Spis produktów -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Spis produktów</h5>
                </div>
                <div class="card-body text-center">
                    <p>Pobierz spis produktów (cena, ilość, opis itd.) w PDF</p>
                    <a asp-controller="Admin" asp-action="DownloadPriceList" class="btn btn-light w-100">Pobierz</a>
                </div>
            </div>
        </div>

        <!-- Stwórz rabat -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Stwórz rabat</h5>
                </div>
                <div class="card-body text-center">
                    <p>Wprowadź ID użytkownika, aby stworzyć rabat.</p>
                    <form asp-controller="SpecialDiscount" asp-action="CreateSpecialDiscount" method="get">
                        <div class="form-group">
                            <input type="number" name="accountId" placeholder="ID użytkownika" class="form-control mb-3" required />
                        </div>
                        <button type="submit" class="btn btn-light w-100">Stwórz rabat</button>
                    </form>
                </div>
            </div>
        </div>

        @if (ViewBag.UnreadNotifications)
        {
            <div class="alert alert-warning text-center">
                Masz <strong>@ViewBag.UnreadNotificationsCount</strong> nieprzeczytane powiadomienia!
                <a href="@Url.Action("Index", "Notification")" class="alert-link">Zobacz</a>
            </div>
        }

        <!-- Zarządzanie zamówieniami -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Zarządzanie Zamówieniami</h5>
                </div>
                <div class="card-body text-center">
                    <p>Przeglądaj, edytuj i zarządzaj zamówieniami.</p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-light w-100">Zarządzaj zamówieniami</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Powiadomienia</h5>
                </div>
                <div class="card-body text-center">
                    <p>Sprawdź listę powiadomień.</p>
                    <a asp-controller="Notification" asp-action="Index" class="btn btn-light w-100">Sprawdź powiadomienia</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0" style="background-color: #000; color: #fff;">
                <div class="card-header text-center" style="background-color: #000; border-bottom: 1px solid #444;">
                    <h5 class="mb-0">Powiadomienia</h5>
                </div>
                <div class="card-body text-center">
                    <p>Dodaj markę</p>
                    <a asp-controller="Brand" asp-action="Create" class="btn btn-light w-100">Dodaj</a>
                </div>
            </div>
        </div>
    </div>
</div>
