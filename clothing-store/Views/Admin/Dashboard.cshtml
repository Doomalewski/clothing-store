@{
    ViewData["Title"] = "Dashboard";
}

<h2>Panel Administratora</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Dodaj produkt</h4>
                </div>
                <div class="card-body">
                    <p>Dodaj nowy produkt do sklepu.</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Dodaj produkt</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Zarządzaj użytkownikami</h4>
                </div>
                <div class="card-body">
                    <p>Przeglądaj, edytuj lub usuwaj użytkowników.</p>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Zarządzaj użytkownikami</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Zamówienia</h4>
                </div>
                <div class="card-body">
                    <p>Przeglądaj i zarządzaj zamówieniami klientów.</p>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-success">Zarządzaj zamówieniami</a>
                </div>
            </div>
        </div>
    </div>
</div>
